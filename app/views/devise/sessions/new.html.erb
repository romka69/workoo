<div class="container mt-5">
  <div class="hero-banner-sm-content">
    <h1 style="color: #6059f6;">Логин</h1>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col col-md-4">
      <%= render "devise/shared/oauth" %>
      <div class="card border-primary mt-4 mb-4">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">

              <div class="field">
                <%= f.label :email, "Электронная почта" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="field mt-3">
                <%= f.label :password, "Пароль" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-check text-center mt-4">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, "Запомнить меня", class: "form-check-label" %>
                </div>
              <% end %>

              <p class="text-center mt-4">
                <%= f.submit "Войти", class: "button" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
